<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.RecipeFormController">
    <children>
        <Label text="Recipe Name:" layoutX="50" layoutY="40"/>
        <TextField fx:id="recipeNameField" layoutX="150" layoutY="40"/>

        <Label text="Description:" layoutX="50" layoutY="80"/>
        <TextField fx:id="descriptionField" layoutX="150" layoutY="80"/>

        <Button text="Add Recipe" layoutX="150" layoutY="130" onAction="#handleAddRecipe"/>
        <Button text="Back" layoutX="250" layoutY="130" onAction="#handleBack"/>

        <Label fx:id="messageLabel" layoutX="150" layoutY="170"/>
    </children>
</AnchorPane>

